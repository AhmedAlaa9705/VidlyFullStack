@model VidlyFullStack.Models.MovieViewModel

@{
    ViewBag.Title = "New";
}

<h2>@ViewBag.mv</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(a=>a.Name)
        @Html.TextBoxFor(a => a.Name, new { @class="form-control"})
        @Html.ValidationMessageFor(a=>a.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.StartDate)
        @Html.TextBoxFor(a => a.StartDate,"{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(a=>a.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.GenreId)
        @Html.DropDownListFor(a => a.GenreId,new SelectList (Model.Genres,"Id","Name"),"Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(a=>a.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.NumberInStock)
        @Html.TextBoxFor(a => a.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(a=>a.NumberInStock)
    </div>
    @Html.HiddenFor(a=>a.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }
